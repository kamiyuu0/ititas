<h1 class="text-3xl font-bold mb-6 text-center">🎯 今日の「いちたす」を登録しよう！</h1>

<div class="max-w-xl mx-auto bg-base-100 p-6 rounded-lg shadow-lg">
  <%= form_with model: @task, local: true do |f| %>
    <% if @task.errors.any? %>
      <div class="mb-4 text-red-500">
        <p><strong>エラーがあります:</strong></p>
        <ul class="list-disc list-inside">
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-control mb-4">
      <%= f.label :title, "タイトル", class: "label" %>
      <%= f.text_field :title, class: "input input-bordered w-full", placeholder: "例: Rubyの復習をやる" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :description, "詳細", class: "label" %>
      <%= f.text_area :description, class: "textarea textarea-bordered w-full", rows: 4, placeholder: "やる理由や目標などを書いてもOK" %>
    </div>

    <div class="form-control mb-6">
      <label class="label cursor-pointer justify-start space-x-2">
        <%= f.check_box :is_public, { class: "checkbox checkbox-primary" } %>
        <span class="label-text">みんなに公開する（ONにすると一覧に表示されます）</span>
      </label>
    </div>

    <div class="flex justify-end">
      <%= f.submit "☁️ 登録する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
