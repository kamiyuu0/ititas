<h1 class="text-3xl font-bold mb-6 text-center">☁️ タスクの詳細</h1>

<div class="max-w-2xl mx-auto bg-base-100 p-6 rounded-lg shadow-lg space-y-4">
  <div class="text-sm text-gray-500 text-right">
    <span>投稿者: <%= @task.user.name %></span> ・ 
    <span>投稿日: <%= @task.created_at.to_date %></span>
  </div>

  <h2 class="text-2xl font-bold text-yellow-600">
    🎯 <%= @task.title %>
  </h2>

  <p class="text-gray-700 whitespace-pre-line">
    <%= @task.description.presence || "（詳細なし）" %>
  </p>

  <div class="flex flex-wrap gap-2 mt-4">
    <% if @task.done? %>
      <span class="badge badge-success text-white">✅ 完了</span>
    <% else %>
      <span class="badge badge-warning text-white">⏳ 未完了</span>
    <% end %>
  </div>

  <!-- ✅ 完了ボタン（自分の・今日の・未完了） -->
  <% if current_user.own?(@task) && @task.target_date == Date.today && !@task.done? %>
    <div class="mt-4">
      <%= button_to "✅ 今日の分を完了にする", complete_task_path(@task),
          method: :patch,
          class: "btn btn-success btn-sm w-full" %>
    </div>
  <% end %>

  <!-- 戻るボタン -->
  <div class="mt-6">
    <%= link_to "← 戻る", tasks_path, class: "btn btn-outline w-full" %>
  </div>
</div>
