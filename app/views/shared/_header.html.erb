<header class="navbar bg-base-100 shadow-md px-4">
  <!-- 左：ロゴ or アイコン -->
  <div class="flex-1">
    <%= link_to current_user.present? ? mypage_path : root_path , class: "text-xl font-bold flex items-center gap-2" do %>
      🐣📆
      <span>いちたす</span>
    <% end %>
  </div>

  <!-- 右：ナビゲーション -->
  <div class="flex-none space-x-2">
    <% if user_signed_in? %>
      <%= link_to "☁️ マイページ", mypage_path, class: "btn btn-ghost btn-sm" %>
      <%= link_to "📅 タスク作成", new_task_path, class: "btn btn-ghost btn-sm" %>
      <%= link_to "🌤 一覧ページ", tasks_path, class: "btn btn-ghost btn-sm" %>
      <%= link_to "サインアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline btn-sm" %>
    <% else %>
      <%= link_to "🌤 はじめる", new_user_registration_path, class: "btn btn-primary btn-sm" %>
      <%= link_to "🎯 ログイン", new_user_session_path, class: "btn btn-outline btn-sm" %>
    <% end %>
  </div>
</header>
