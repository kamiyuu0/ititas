<div class="max-w-md mx-auto bg-base-100 p-8 rounded-2xl shadow-lg">
  <h2 class="text-2xl font-bold text-center mb-6">🐥ろぐいん</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!-- メールアドレス -->
    <div class="form-control mb-4">
      <%= f.label :email, "メールアドレス", class: "label label-text font-semibold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <!-- パスワード -->
    <div class="form-control mb-4">
      <%= f.label :password, "パスワード", class: "label label-text font-semibold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>

    <!-- ログイン状態を保持 -->
    <% if devise_mapping.rememberable? %>
      <div class="form-control mb-6">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :remember_me, class: "checkbox checkbox-sm" %>
          <span class="label-text">ログイン状態を保持する</span>
        </label>
      </div>
    <% end %>

    <!-- ログインボタン -->
    <div class="form-control">
      <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>