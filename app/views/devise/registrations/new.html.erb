<div class="max-w-md mx-auto bg-base-100 p-8 rounded-2xl shadow-lg">
  <h2 class="text-2xl font-bold text-center mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- ユーザー名 -->
    <div class="form-control mb-4">
      <%= f.label :name, "ユーザー名", class: "label label-text font-semibold" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "例）山田太郎",
            class: "input input-bordered w-full" %>
    </div>

    <!-- メールアドレス -->
    <div class="form-control mb-4">
      <%= f.label :email, "メールアドレス", class: "label label-text font-semibold" %>
      <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <!-- パスワード -->
    <div class="form-control mb-4">
      <%= f.label :password, "パスワード", class: "label label-text font-semibold" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-gray-500 mb-1">
          （<%= @minimum_password_length %>文字以上）
        </span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <!-- パスワード（確認） -->
    <div class="form-control mb-6">
      <%= f.label :password_confirmation, "パスワード（確認）", class: "label label-text font-semibold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <!-- 送信ボタン -->
    <div class="form-control">
      <%= f.submit "アカウント作成", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>


<%= render "devise/shared/links" %>
