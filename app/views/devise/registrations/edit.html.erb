<h2 class="text-2xl font-bold text-base-content mb-6 text-center">📝 プロフィール編集</h2>

<div class="max-w-xl mx-auto bg-base-100 p-6 rounded-xl shadow-md">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    
    <% if resource.errors.any? %>
      <div class="alert alert-error shadow-sm">
        <div>
          <span><%= pluralize(resource.errors.count, "件のエラー") %>があります：</span>
        </div>
        <ul class="list-disc list-inside text-sm">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- ユーザー名 -->
    <div class="form-control">
      <%= f.label :name, "ユーザー名", class: "label label-text font-semibold" %>
      <%= f.text_field :name, class: "input input-bordered w-full" %>
    </div>

  <% if current_user.provider == "line" %>
    <div class="form-control">
      <%= f.label :notification_enabled, "通知を有効にする", class: "label label-text font-semibold" %>
      <%= f.check_box :notification_enabled %>
    </div>

    <div class="field">
      <%= f.label :notification_time, "通知時刻", class: "label label-text font-semibold" %><br>
      <%= f.time_field :notification_time %>
    </div>
  <% end %>

    <!-- 送信ボタン -->
    <div class="form-control mt-6">
      <%= f.submit "更新する", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
