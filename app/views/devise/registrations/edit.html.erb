<h2 class="text-2xl font-bold text-base-content mb-6 text-center">­ЪЊЮ сЃЌсЃГсЃЋсѓБсЃ╝сЃФуиежЏє</h2>

<div class="max-w-xl mx-auto bg-base-100 p-6 rounded-xl shadow-md">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    
    <% if resource.errors.any? %>
      <div class="alert alert-error shadow-sm">
        <div>
          <span><%= pluralize(resource.errors.count, "С╗ХсЂ«сѓесЃЕсЃ╝") %>сЂїсЂѓсѓісЂЙсЂЎ№╝џ</span>
        </div>
        <ul class="list-disc list-inside text-sm">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- сЃдсЃ╝сѓХсЃ╝тљЇ -->
    <div class="form-control">
      <%= f.label :name, "сЃдсЃ╝сѓХсЃ╝тљЇ", class: "label label-text font-semibold" %>
      <%= f.text_field :name, class: "input input-bordered w-full" %>
    </div>

    <!-- уЈЙтюесЂ«сЃЉсѓ╣сЃ»сЃ╝сЃЅ -->
    <div class="form-control">
      <%= f.label :current_password, "уЈЙтюесЂ«сЃЉсѓ╣сЃ»сЃ╝сЃЅ№╝ѕт┐Ёжаѕ№╝Ѕ", class: "label label-text font-semibold" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>

    <!-- жђЂС┐АсЃюсѓ┐сЃ│ -->
    <div class="form-control mt-6">
      <%= f.submit "ТЏ┤Тќ░сЂЎсѓІ", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
